<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2022-4-16--002-motos" author="amalyshev">
        <preConditions>
            <not>
                <tableExists tableName="motos"/>
            </not>
        </preConditions>
        <createTable tableName="motos">

            <column name="id"
                    type="numeric(19,0)"
                    autoIncrement="true">
                <constraints nullable="false" primaryKey="true" deleteCascade="true"/>
            </column>

            <column name="user_id"
                    type="numeric(19, 0)"
                    autoIncrement="false">
                <constraints nullable="false" foreignKeyName="fk_moto_id" references="users(id)" deleteCascade="true"/>
            </column>

            <column name="speed"
                    type="numeric(100)">
                <constraints nullable="false"/>
            </column>

            <column name="latitude"
                    type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="longitude"
                    type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="altitude"
                    type="varchar(100)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>